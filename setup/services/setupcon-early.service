[Unit]
Description=Setup console font before getty services
DefaultDependencies=no
Before=getty.target getty@.service
After=systemd-vconsole-setup.service local-fs.target

[Service]
Type=oneshot
ExecStart=/bin/setupcon
RemainAfterExit=yes
StandardInput=tty
StandardOutput=tty

[Install]
WantedBy=sysinit.target